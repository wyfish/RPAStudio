<sap:WorkflowElementDialog x:Class="Plugins.Shared.Library.Editors.PythonScriptEditorDialog" 
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                           xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation" 
                           xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                           sap:Title="脚本编辑器" 
                           MinHeight="450" MinWidth="600" 
                           MaxHeight="600" MaxWidth="800" 
                           sap:WindowResizeMode="CanResizeWithGrip" 
                           sap:WindowSizeToContent="Manual" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="lblContentTitle" Content="Python 脚本" HorizontalAlignment="Left" Grid.Row="0" />
        <DockPanel LastChildFill="True" Grid.Row="1">
            <avalonEdit:TextEditor Name="textEditor" DockPanel.Dock="Top" 
				FontSize="13"
				ShowLineNumbers="True"/>
        </DockPanel>
    </Grid>
</sap:WorkflowElementDialog>